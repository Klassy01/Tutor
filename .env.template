# AI Personal Tutor - Environment Configuration Template
# Copy this file to .env and update the values

# =================
# Database Configuration
# =================
# For development (SQLite)
DATABASE_URL=sqlite:///./learning_tutor.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost/learning_tutor

# =================
# Security Configuration
# =================
# Generate a secure secret key for JWT tokens
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =================
# AI Configuration
# =================
# AI Provider Selection
AI_PROVIDER=gemini  # Options: "openai" or "gemini"

# OpenAI Configuration (if using OpenAI)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini Configuration (if using Gemini)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# OpenAI model configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =================
# Application Configuration
# =================
# Debug mode (set to False for production)
DEBUG=True

# Application name and version
APP_NAME=AI Personal Tutor
APP_VERSION=1.0.0

# Server configuration
HOST=0.0.0.0
PORT=8000

# CORS configuration (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# =================
# External Services
# =================
# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379

# Email configuration (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=True
SMTP_SSL=False

# =================
# Learning System Configuration
# =================
# Adaptive learning engine settings
ADAPTIVE_LEARNING_ENABLED=True
KNOWLEDGE_THRESHOLD=0.8
MASTERY_THRESHOLD=0.85
DIFFICULTY_ADJUSTMENT_RATE=0.1

# Progress tracking settings
PROGRESS_UPDATE_INTERVAL=300  # seconds
ENGAGEMENT_TRACKING_ENABLED=True
ANALYTICS_ENABLED=True

# Gamification settings
POINTS_PER_CORRECT_ANSWER=10
POINTS_PER_SESSION_COMPLETION=50
POINTS_PER_STREAK_DAY=5
ACHIEVEMENT_SYSTEM_ENABLED=True

# =================
# API Configuration
# =================
# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# WebSocket configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30

# File upload limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["pdf", "docx", "txt", "md"]

# =================
# Logging Configuration
# =================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE_PATH=

# =================
# Development Configuration
# =================
# Auto-reload on code changes (development only)
RELOAD=True

# Test database URL (for running tests)
TEST_DATABASE_URL=sqlite:///./test_learning_tutor.db

# Sample data creation (development only)
CREATE_SAMPLE_DATA=False

# =================
# Production Configuration
# =================
# Production-specific settings (uncomment for production)

# SSL/TLS configuration
# SSL_KEYFILE=/path/to/keyfile.pem
# SSL_CERTFILE=/path/to/certfile.pem

# Database connection pooling
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=30
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600

# Security headers
# SECURE_HEADERS_ENABLED=True
# HSTS_MAX_AGE=31536000

# Monitoring and metrics
# METRICS_ENABLED=True
# HEALTH_CHECK_INTERVAL=60

# Backup configuration
# BACKUP_ENABLED=True
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30

# =================
# Third-party Integrations
# =================
# Google Analytics (optional)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Sentry error tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# AWS S3 for file storage (optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_S3_REGION=us-east-1

# =================
# Feature Flags
# =================
# Enable/disable specific features
REAL_TIME_CHAT_ENABLED=True
VOICE_INTERACTION_ENABLED=False
VIDEO_CONTENT_ENABLED=True
COLLABORATIVE_LEARNING_ENABLED=False
MOBILE_APP_API_ENABLED=True
ADMIN_DASHBOARD_ENABLED=True

# =================
# Localization
# =================
# Default language and timezone
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=["en", "es", "fr", "de", "zh"]

# =================
# Performance Configuration
# =================
# Caching settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# Database query optimization
DB_QUERY_TIMEOUT_SECONDS=30
DB_SLOW_QUERY_THRESHOLD_MS=1000

# API response optimization
API_RESPONSE_COMPRESSION=True
API_PAGINATION_DEFAULT_SIZE=20
API_PAGINATION_MAX_SIZE=100
